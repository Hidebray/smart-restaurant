# Backend API URL
# Used by frontend to make API calls to the backend
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Socket URL (usually the same as API URL)
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000

# JWT Secret (must match backend JWT_SECRET)
# Used for server-side token verification
JWT_SECRET=your-super-secret-jwt-key

# Stripe Publishable Key (Frontend)
# Get from: https://dashboard.stripe.com/test/apikeys
# Use "pk_test_..." for test mode, "pk_live_..." for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here


# Node Environment
NODE_ENV=development
